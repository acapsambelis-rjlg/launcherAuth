@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var customers = ViewBag.Customers as List<RJLG.LauncherAuthServer.Models.CustomerAccount>;
    var search = ViewBag.Search as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="page-header mb-0"><i class="fas fa-users me-2"></i> Customer Accounts</h2>
    <button id="showAddCustomerModal" type="button" class="btn btn-primary"><i class="fas fa-plus me-1"></i> Add Customer</button>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="Search customers..." value="@search" />
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Search</button>
                @if (!string.IsNullOrEmpty(search))
                {
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">Clear</a>
                }
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        @if (customers != null && customers.Count > 0)
        {
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Customer Name</th>
                        <th>Keys</th>
                        <th>Users</th>
                        <th>Current Version</th>
                        <th>Contact</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in customers)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("Details", "Customers", new { customerId = customer.ID })">
                                    <strong>@customer.CustomerName</strong>
                                </a>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@(customer.LoginKeys?.Count ?? 0) / @customer.KeysAllowed</span>
                            </td>
                            <td>0</td>
                            <td>@customer.CurrentVersion</td>
                            <td>
                                @if (!string.IsNullOrEmpty(customer.ContactName))
                                {
                                    <span>@customer.ContactName</span>
                                    if (!string.IsNullOrEmpty(customer.ContactEmail))
                                    {
                                        <br /><small class="text-muted">@customer.ContactEmail</small>
                                    }
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Customers", new { customerId = customer.ID })" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></a>
                                @using (Html.BeginForm("Remove", "Customers", FormMethod.Post, new { style = "display:inline;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="customerId" value="@customer.ID" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this customer? This action cannot be undone.');"><i class="fas fa-trash"></i></button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="p-4 text-center text-muted">
                @if (!string.IsNullOrEmpty(search))
                {
                    <p>No customers found matching "@search".</p>
                }
                else
                {
                    <p>No customers yet. Click "Add Customer" to create your first one.</p>
                }
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-1"></i> Back to Dashboard</a>
</div>

<div id="addCustomerModal" class="modal-overlay" style="display:none;">
    <div class="modal-content">
        <button class="modal-close" type="button" id="closeAddCustomerModal">&times;</button>
        <h5 class="mb-3">Add New Customer</h5>
        @Html.Partial("_CreateCustomerAccount")
    </div>
</div>

<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }
    .modal-content {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        max-width: 500px;
        width: 90%;
        position: relative;
    }
    .modal-close {
        position: absolute;
        top: 10px;
        right: 15px;
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
    }
</style>

<script>
    document.getElementById('showAddCustomerModal').onclick = function () {
        document.getElementById('addCustomerModal').style.display = 'flex';
    };
    document.getElementById('closeAddCustomerModal').onclick = function () {
        document.getElementById('addCustomerModal').style.display = 'none';
    };
    document.getElementById('addCustomerModal').onclick = function (e) {
        if (e.target === this) this.style.display = 'none';
    };
</script>
