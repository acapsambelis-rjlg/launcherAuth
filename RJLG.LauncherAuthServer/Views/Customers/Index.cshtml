@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <button id="showAddCustomerModal" type="button">Add Customer</button>

    <div id="addCustomerModal" class="modal-overlay">
        <div class="modal-content">
            <button class="modal-close" type="button" id="closeAddCustomerModal">&times;</button>
            @Html.Partial("_CreateCustomerAccount")
        </div>
    </div>

    <h2>Customer Accounts</h2>
    @if (ViewBag.Customers != null && ViewBag.Customers.Count > 0)
    {
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Keys</th>
                    <th scope="col">Users</th>
                    <th scope="col">Current Version</th>
                    <th scope="col">Contact Name</th>
                    <th scope="col">Contact Email</th>
                    <th scope="col">Timezone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (RJLG.LauncherAuthServer.Models.CustomerAccount customer in ViewBag.Customers)
                {
                    <tr>
                        <td>@Html.ActionLink(customer.CustomerName, "Details", "Customers", new { customerId = customer.ID }, null)</td>
                        <td>@customer.LoginKeys.Count / @customer.KeysAllowed</td>
                        <td>@customer.UniqueUsers()</td>
                        <td>@customer.CurrentVersion</td>
                        <td>@customer.ContactName</td>
                        <td>@customer.ContactEmail</td>
                        <td>@customer.Timezone</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No customers :(</p>
    }

</main>
<script>
    document.getElementById('showAddCustomerModal').onclick = function () {
        document.getElementById('addCustomerModal').style.display = 'flex';
    };
    document.getElementById('closeAddCustomerModal').onclick = function () {
        document.getElementById('addCustomerModal').style.display = 'none';
    };
    // Optional: close modal when clicking outside content
    document.getElementById('addCustomerModal').onclick = function (e) {
        if (e.target === this) {
            this.style.display = 'none';
        }
    };
</script>